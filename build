#!/bin/bash

git pull
git submodule init
git submodule update

SRC_DIR=$(pwd)
BLD_DIR="$HOME/.software/cpp2sqlite/cpp2sqlite-build"
BIN_DIR=/usr/local/bin/

sudo rm -rf $BLD_DIR
mkdir -p $BLD_DIR
cd $BLD_DIR

cd $HOME/.software/cpp2sqlite/scripts
./download.sh

cmake -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=$BIN_DIR \
    -DXLNT_DIR=/usr/local \
    -D XLNT_LIBRARY_DIRS=/usr/local \
    $SRC_DIR

make -j9
sudo make install

cd $BLD_DIR  # it should be $BIN_DIR
time cpp2sqlite --verbose --lang=fr --inDir $HOME/.software/cpp2sqlite/input/
#time cpp2sqlite --verbose --inDir $HOME/.software/cpp2sqlite/input/
